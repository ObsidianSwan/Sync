<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/connection_dimen"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/connection_profile_image"
        android:layout_width="@dimen/connection_dimen"
        android:layout_height="@dimen/connection_dimen"
        android:layout_marginEnd="@dimen/connection_margin"
        android:layout_marginStart="@dimen/connection_margin"
        android:layout_marginTop="16dp"
        android:background="@mipmap/ic_launcher_foreground"
        android:contentDescription="@string/connection_image_content_description"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/connection_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/connection_margin"
        android:layout_marginStart="@dimen/connection_margin"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/connection_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/connection_margin"
        android:layout_marginStart="@dimen/connection_margin"
        android:layout_marginTop="@dimen/connection_margin"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/connection_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/connection_margin"
        android:layout_marginStart="@dimen/connection_margin"
        android:layout_marginTop="@dimen/connection_margin"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/connection_industry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/connection_margin"
        android:layout_marginEnd="@dimen/connection_margin"
        android:layout_marginStart="@dimen/connection_margin"
        android:layout_marginTop="@dimen/connection_margin"
        android:gravity="center_horizontal" />

</LinearLayout>
