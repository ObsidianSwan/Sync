<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_background"
    android:orientation="horizontal"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:paddingTop="@dimen/nav_header_image_top_margin"
    android:paddingBottom="@dimen/nav_header_photo">

    <ImageView
        android:id="@+id/nav_profile_image"
        android:layout_width="@dimen/navigation_img_dimen"
        android:layout_height="@dimen/navigation_img_dimen"
        android:layout_marginEnd="@dimen/nav_header_photo"
        android:layout_marginStart="@dimen/nav_header_photo"
        android:background="@mipmap/ic_launcher_foreground"
        android:contentDescription="@string/profile_image"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nav_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/nav_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/nav_connections_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
